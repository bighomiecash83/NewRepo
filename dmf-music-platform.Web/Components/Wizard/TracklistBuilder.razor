@namespace dmf_music_platform.Web.Components

<div class="card-container">
    <div class="flex justify-between items-center mb-8">
        <h2 class="text-2xl font-bold">Tracklist Builder</h2>
        <button class="px-4 py-2 bg-gray-700 rounded hover:bg-gray-600" @onclick="OnBack">← Back</button>
    </div>

    <div class="space-y-4">
        @for (int i = 0; i < tracks.Count; i++)
        {
            int index = i;
            <div class="flex items-center gap-4 p-4 bg-gray-900 border border-gray-700 rounded">
                <span class="font-bold text-blue-500 min-w-12">@(index + 1)</span>
                <input type="text" class="flex-1 px-3 py-2 bg-gray-800 border border-gray-600 rounded" placeholder="Track name" @bind="tracks[index].Name" />
                <input type="text" class="w-24 px-3 py-2 bg-gray-800 border border-gray-600 rounded" placeholder="Artist" @bind="tracks[index].Artist" />
                <input type="text" class="w-20 px-3 py-2 bg-gray-800 border border-gray-600 rounded" placeholder="3:45" @bind="tracks[index].Duration" />
                <button class="px-3 py-2 bg-red-700 text-white rounded hover:bg-red-800" @onclick="@(() => RemoveTrack(index))">Remove</button>
            </div>
        }
    </div>

    <button class="mt-6 px-4 py-3 bg-green-600 text-white rounded font-bold hover:bg-green-700" @onclick="AddTrack">
        + Add Track
    </button>

    <div class="flex gap-4 pt-8">
        <button class="flex-1 px-4 py-3 bg-gray-700 rounded hover:bg-gray-600" @onclick="OnBack">← Back</button>
        <button class="flex-1 px-4 py-3 bg-blue-600 text-white rounded font-bold hover:bg-blue-700" @onclick="Next">
            Next: QC Review →
        </button>
    </div>
</div>

@code {
    [Parameter]
    public string ReleaseType { get; set; } = "single";

    [Parameter]
    public EventCallback OnNext { get; set; }

    [Parameter]
    public EventCallback OnBack { get; set; }

    private List<Track> tracks = new() { new Track() };

    private void AddTrack() => tracks.Add(new Track());
    private void RemoveTrack(int index) => tracks.RemoveAt(index);

    private async Task Next()
    {
        await OnNext.InvokeAsync();
    }

    private class Track
    {
        public string Name { get; set; } = "";
        public string Artist { get; set; } = "";
        public string Duration { get; set; } = "";
    }
}
