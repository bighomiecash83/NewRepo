# DMF MUSIC PLATFORM - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# Node.js Environment
# ============================================================================
NODE_ENV=dev

# ============================================================================
# MongoDB Configuration
# ============================================================================
# Development Database
MONGO_URI_DEV=mongodb+srv://username:password@dev-cluster.mongodb.net/dmf_music_platform?retryWrites=true&w=majority

# Staging Database
MONGO_URI_STAGE=mongodb+srv://username:password@stage-cluster.mongodb.net/dmf_music_platform?retryWrites=true&w=majority

# Production Database (?? Be careful with this!)
MONGO_URI_PROD=mongodb+srv://username:password@prod-cluster.mongodb.net/dmf_music_platform?retryWrites=true&w=majority

# Default MongoDB URI (used if env-specific URI not found)
MONGO_URI=mongodb+srv://bighomiecash8346:<db_password>@dmf-music-platform.pfqrhc.mongodb.net/?appName=DMF-MUSIC-platform

# ============================================================================
# Google OAuth Configuration
# ============================================================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_PROJECT_ID=dmf-music-prod

# ============================================================================
# Authentication Configuration
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_EXPIRATION_HOURS=24

# ============================================================================
# Database Configuration
# ============================================================================
# SQL Server / Azure SQL (for Identity/Auth)
SQL_CONNECTION_STRING=Server=tcp:your-server.database.windows.net,1433;Initial Catalog=DMFMusicPlatform;Persist Security Info=False;User ID=your-user;Password=your-password;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;

# ============================================================================
# Application Configuration
# ============================================================================
APP_NAME=DMF-MUSIC-PLATFORM
APP_VERSION=1.0.0
ENVIRONMENT=development

# Logging
LOG_LEVEL=Information
LOG_PATH=./logs

# ============================================================================
# Seeding Configuration
# ============================================================================
ROSTER_FILE=./dmf_roster.json
SEED_DRY_RUN=false

# ============================================================================
# API Configuration
# ============================================================================
API_BASE_URL=http://localhost:5000
API_PORT=5000
API_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://dmf-music-platform.lovable.app

# ============================================================================
# Frontend Configuration
# ============================================================================
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_AUTH_DOMAIN=your-auth-domain
REACT_APP_CLIENT_ID=your-client-id

# ============================================================================
# Stripe Configuration (for payments)
# ============================================================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================================================
# Email Configuration
# ============================================================================
EMAIL_SENDER=noreply@dmfrecords.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============================================================================
# Slack Integration (optional)
# ============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ============================================================================
# GitHub Actions (set these as repository secrets, not in .env)
# ============================================================================
# MONGO_URI_DEV=...
# MONGO_URI_STAGE=...
# MONGO_URI_PROD=...

# ============================================================================
# Development Flags
# ============================================================================
DEBUG=false
SHOW_LOGS=true
SKIP_MIDDLEWARE_CHECKS=false
