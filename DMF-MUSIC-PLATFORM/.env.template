
# Multi-Cloud Provider Configuration Template
# Store in: .env.local (development) or secrets manager (production)
# Never commit this file to version control

# ============================================================================
# PRIMARY BACKEND - LOVABLE
# ============================================================================
LOVABLE_API_BASE=https://api.lovable.dev/v1
LOVABLE_API_KEY=your_lovable_api_key_here
LOVABLE_PROJECT_ID=dmf-music-platform-prod
LOVABLE_ENVIRONMENT=production
LOVABLE_TIMEOUT_MS=30000
LOVABLE_RETRY_COUNT=3

# ============================================================================
# SECONDARY BACKENDS - SERVICE REGISTRY
# ============================================================================

# Firebase Functions
FIREBASE_FUNCS_URL=https://us-central1-dmf-music-platform.cloudfunctions.net
FIREBASE_PROJECT_ID=dmf-music-platform
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=dmf-music-platform.firebaseapp.com
FIREBASE_DATABASE_URL=https://dmf-music-platform.firebaseio.com
FIREBASE_STORAGE_BUCKET=dmf-music-platform.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
FIREBASE_APP_ID=your_app_id_here
FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# Azure Worker Services
AZURE_WORKER_BASE=https://dmf-music-platform.azurewebsites.net
AZURE_WORKER_TENANT_ID=your_azure_tenant_id
AZURE_WORKER_CLIENT_ID=your_azure_client_id
AZURE_WORKER_CLIENT_SECRET=your_azure_client_secret
AZURE_WORKER_SUBSCRIPTION_ID=your_subscription_id
AZURE_WORKER_RESOURCE_GROUP=dmf-music-platform-prod

# Cloudflare Workers
CLOUDFLARE_WORKERS_BASE=https://dmf-workers.your-domain.com
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# ============================================================================
# STORAGE PROVIDERS - MULTI-CLOUD
# ============================================================================

# Google Cloud Storage (Primary)
GCS_PROJECT_ID=dmf-music-platform-prod
GCS_BUCKET_ASSETS=dmf-assets-prod
GCS_BUCKET_EVIDENCE=dmf-evidence-vault-prod
GCS_BUCKET_ROYALTIES=dmf-royalty-reports-prod
GCS_KEY_FILE_PATH=./secrets/gcs-key.json
GCS_ENCRYPTION_KEY=your_gcs_encryption_key_here
GCS_RETENTION_DAYS=2555

# Amazon S3 / AWS Glacier (Mirror/DR)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_ASSETS=dmf-assets-s3-prod
AWS_BUCKET_EVIDENCE=dmf-evidence-vault-s3-prod
AWS_BUCKET_ROYALTIES=dmf-royalty-reports-s3-prod
AWS_GLACIER_TRANSITION_DAYS=120
AWS_ENCRYPTION_KEY=your_aws_encryption_key_here

# Azure Blob Storage (Alt Region + Legal)
AZURE_STORAGE_ACCOUNT=dmfmusicplatformprod
AZURE_STORAGE_KEY=your_azure_storage_key_here
AZURE_STORAGE_CONNECTION_STRING=your_connection_string_here
AZURE_CONTAINER_ASSETS=dmfassets
AZURE_CONTAINER_EVIDENCE=dmfevidencevault
AZURE_CONTAINER_ROYALTIES=dmfroyaltyreports
AZURE_RETENTION_POLICY_DAYS=2555

# Cloudflare R2 (Edge Reads for Public Assets)
R2_ACCOUNT_ID=your_r2_account_id
R2_API_TOKEN=your_r2_api_token
R2_BUCKET_NAME=dmf-assets-edge
R2_CUSTOM_DOMAIN=assets.dmf-music-platform.com

# Backblaze B2 (Backups)
B2_APPLICATION_KEY_ID=your_b2_key_id
B2_APPLICATION_KEY=your_b2_application_key
B2_BUCKET_ID=your_b2_bucket_id
B2_BUCKET_NAME=dmf-backups

# Wasabi (Cost-Optimized Mirror)
WASABI_ACCESS_KEY=your_wasabi_access_key
WASABI_SECRET_KEY=your_wasabi_secret_key
WASABI_ENDPOINT=s3.us-west-1.wasabisys.com
WASABI_BUCKET=dmf-assets-mirror
WASABI_REGION=us-west-1

# ============================================================================
# STORAGE CONFIGURATION
# ============================================================================

# Encryption
STORAGE_ENCRYPTION_ALGORITHM=AES-256-GCM
STORAGE_HASHING_ALGORITHM=BLAKE3
STORAGE_KEY_ROTATION_DAYS=90

# Lifecycle Policies
STORAGE_COLD_STORAGE_THRESHOLD_DAYS=120
STORAGE_EVIDENCE_RETENTION_YEARS=10
STORAGE_ROYALTY_RETENTION_YEARS=7
STORAGE_GENERAL_RETENTION_YEARS=5

# Read/Write Routing
STORAGE_READ_PRIORITY=R2,GCS,S3
STORAGE_WRITE_TARGETS=GCS,S3
STORAGE_BACKUP_TARGETS=GCS,S3,Azure,B2,Wasabi
STORAGE_ENABLE_CROSS_CLOUD_SYNC=true
STORAGE_SYNC_INTERVAL_MINUTES=30

# ============================================================================
# DSP CONFIGURATION - GLOBAL PLATFORMS
# ============================================================================

# Global Majors
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_ARTIST_ID=your_artist_id

APPLE_MUSIC_CLIENT_ID=your_apple_music_client_id
APPLE_MUSIC_TEAM_ID=your_team_id
APPLE_MUSIC_KEY_ID=your_key_id
APPLE_MUSIC_PRIVATE_KEY_PATH=./secrets/apple-music-key.p8

YOUTUBE_API_KEY=your_youtube_api_key
YOUTUBE_CHANNEL_ID=your_channel_id
YOUTUBE_CONTENT_ID_API_KEY=your_content_id_api_key

AMAZON_MUSIC_CLIENT_ID=your_amazon_client_id
AMAZON_MUSIC_CLIENT_SECRET=your_amazon_secret

TIDAL_CLIENT_ID=your_tidal_client_id
TIDAL_CLIENT_SECRET=your_tidal_secret
TIDAL_USER_ID=your_user_id

DEEZER_APP_ID=your_deezer_app_id
DEEZER_SECRET_KEY=your_deezer_secret_key

SOUNDCLOUD_API_KEY=your_soundcloud_api_key
SOUNDCLOUD_OAUTH_TOKEN=your_oauth_token

# Americas Platforms
IHEARTRADIO_API_KEY=your_iheartradio_api_key
TOUCHTUNES_API_KEY=your_touchtunes_api_key
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
SNAPCHAT_ACCESS_TOKEN=your_snapchat_access_token
TWITCH_CLIENT_ID=your_twitch_client_id

# Europe/CIS Platforms
YANDEX_MUSIC_API_KEY=your_yandex_api_key
VK_MUSIC_ACCESS_TOKEN=your_vk_access_token
ZVOOQ_API_KEY=your_zvooq_api_key

# APAC Platforms
SPOTIFY_APAC_REGION=apac
JOYSAAVN_API_KEY=your_joysaavn_api_key
WYNK_API_KEY=your_wynk_api_key
LINE_MUSIC_API_KEY=your_line_music_api_key
NETEASE_MUSIC_ACCESS_TOKEN=your_netease_access_token
TENCENT_MUSIC_API_KEY=your_tencent_api_key

# ============================================================================
# LOGGING & MONITORING
# ============================================================================

LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=console,file,cloud

# Cloud Logging
GOOGLE_CLOUD_LOGGING_ENABLED=true
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key

# Error Tracking
SENTRY_DSN=your_sentry_dsn_here
ERROR_TRACKING_ENABLED=true

# ============================================================================
# SECURITY
# ============================================================================

# JWT/Auth
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRY_HOURS=24
REFRESH_TOKEN_EXPIRY_DAYS=30

# API Security
API_RATE_LIMIT_PER_MINUTE=100
API_RATE_LIMIT_PER_HOUR=5000
CORS_ALLOWED_ORIGINS=https://dmf-music-platform.com,https://admin.dmf-music-platform.com

# ============================================================================
# ENVIRONMENT
# ============================================================================

NODE_ENV=production
ASPNETCORE_ENVIRONMENT=Production
DEBUG=false
ENABLE_PROFILING=false

# ============================================================================
# NOTES
# ============================================================================
# 1. All credentials should be stored in a secure secrets manager
# 2. Never commit this file to version control
# 3. Use Azure Key Vault, AWS Secrets Manager, or similar in production
# 4. Rotate API keys every 90 days
# 5. Monitor all endpoints for unauthorized access
# 6. Enable audit logging for all storage operations
