@page "/distributor/status"
@using DMF_MUSIC_PLATFORM.Data.Distribution
@using System.Net.Http.Json
@inject HttpClient Http

<PageTitle>Delivery Status | DMF Music Platform</PageTitle>

<div class="container-fluid mt-4">
    <h2 class="mb-4">?? Delivery Status Board</h2>

    @if (releases == null)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (releases.Count == 0)
    {
        <div class="alert alert-info">
            No releases found. <a href="/distributor/wizard">Create one now ?</a>
        </div>
    }
    else
    {
        @foreach (var release in releases)
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-header bg-light">
                    <div class="row">
                        <div class="col-md-8">
                            <h5 class="mb-0">
                                @release.Title
                                <small class="text-muted">(@release.Upc)</small>
                            </h5>
                            <small class="text-muted">Created: @release.CreatedAt.ToString("g")</small>
                        </div>
                        <div class="col-md-4 text-end">
                            <span class="badge bg-@GetStatusBadgeColor(release.Status)">@release.Status</span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <strong>Genre:</strong> @(release.Genre ?? "-")
                        </div>
                        <div class="col-md-3">
                            <strong>Tracks:</strong> @release.TrackCount
                        </div>
                        <div class="col-md-3">
                            <strong>Release Date:</strong> @(release.ReleaseDate?.ToString("yyyy-MM-dd") ?? "-")
                        </div>
                        <div class="col-md-3">
                            <strong>DSPs:</strong> @string.Join(", ", release.SelectedDsps)
                        </div>
                    </div>

                    <h6>Delivery Status by Platform:</h6>
                    <table class="table table-sm table-hover">
                        <thead>
                            <tr>
                                <th>Platform</th>
                                <th>Status</th>
                                <th>Sent</th>
                                <th>Acknowledged</th>
                                <th>Error</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (deliveriesByRelease.ContainsKey(release.Id))
                            {
                                @foreach (var delivery in deliveriesByRelease[release.Id])
                                {
                                    <tr>
                                        <td>
                                            <strong>@delivery.Dsp.ToUpper()</strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-@GetDeliveryStatusColor(delivery.Status)">@delivery.Status</span>
                                        </td>
                                        <td>
                                            @if (delivery.SentAt.HasValue)
                                            {
                                                <small>@delivery.SentAt.Value.ToString("g")</small>
                                            }
                                        </td>
                                        <td>
                                            @if (delivery.AcknowledgedAt.HasValue)
                                            {
                                                <small>@delivery.AcknowledgedAt.Value.ToString("g")</small>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(delivery.LastError))
                                            {
                                                <small class="text-danger">@delivery.LastError</small>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-muted">No deliveries queued yet.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    }

    <div class="mt-4">
        <a href="/distributor/wizard" class="btn btn-primary">+ Create New Release</a>
        <button class="btn btn-outline-secondary" @onclick="RefreshStatus">?? Refresh</button>
    </div>
</div>

@code {
    private List<Release>? releases;
    private Dictionary<string, List<Delivery>> deliveriesByRelease = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadReleases();
    }

    private async Task LoadReleases()
    {
        try
        {
            releases = await Http.GetFromJsonAsync<List<Release>>("api/releases") ?? new();

            foreach (var release in releases)
            {
                try
                {
                    var deliveries = await Http.GetFromJsonAsync<List<Delivery>>($"api/releases/{release.Id}/deliveries") ?? new();
                    deliveriesByRelease[release.Id] = deliveries;
                }
                catch
                {
                    deliveriesByRelease[release.Id] = new();
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading releases: {ex.Message}");
        }
    }

    private string GetStatusBadgeColor(string status) => status switch
    {
        "DRAFT" => "secondary",
        "QC_PENDING" => "warning",
        "QC_PASSED" => "info",
        "SCHEDULED" => "primary",
        "LIVE" => "success",
        "ERROR" => "danger",
        _ => "secondary"
    };

    private string GetDeliveryStatusColor(string status) => status switch
    {
        "PENDING" => "secondary",
        "QUEUED" => "warning",
        "SENT" => "info",
        "ACK" => "info",
        "LIVE" => "success",
        "FAILED" => "danger",
        _ => "secondary"
    };

    private async Task RefreshStatus()
    {
        releases = null;
        deliveriesByRelease.Clear();
        await LoadReleases();
    }
}
