@page "/founder/vault"
@using System.Security.Claims
@using DMF_MUSIC_PLATFORM.Authorization
@inject AuthenticationStateProvider AuthenticationStateProvider

<FounderGate>
    <div class="vault-container">
        <div class="container-fluid py-4">
            <!-- Header -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="vault-header">
                        <h1>?? Master Vault</h1>
                        <p class="lead text-muted">
                            Unreleased tracks, sensitive data, and archived masters
                        </p>
                    </div>
                </div>
            </div>

            <!-- Tabs -->
            <div class="row mb-4">
                <div class="col-12">
                    <ul class="nav nav-tabs vault-tabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="unreleased-tab" data-bs-toggle="tab" data-bs-target="#unreleased" role="tab">
                                Unreleased Tracks
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="archived-tab" data-bs-toggle="tab" data-bs-target="#archived" role="tab">
                                Archived Masters
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="sensitive-tab" data-bs-toggle="tab" data-bs-target="#sensitive" role="tab">
                                Sensitive Data
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="deleted-tab" data-bs-toggle="tab" data-bs-target="#deleted" role="tab">
                                Soft Deleted
                            </button>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Tab Content -->
            <div class="row">
                <div class="col-12">
                    <div class="tab-content">
                        <!-- Unreleased Tracks -->
                        <div class="tab-pane fade show active" id="unreleased" role="tabpanel">
                            <div class="vault-section">
                                <h4 class="section-title">Unreleased & Private Tracks</h4>
                                <p class="text-muted small mb-3">
                                    Tracks that haven't been released to the public. You can restore, delete, or manage these tracks.
                                </p>

                                @if (unreleasedTracks.Count == 0)
                                {
                                    <div class="alert alert-info">
                                        No unreleased tracks in vault.
                                    </div>
                                }
                                else
                                {
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Track</th>
                                                    <th>Artist</th>
                                                    <th>Created</th>
                                                    <th>Status</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var track in unreleasedTracks)
                                                {
                                                    <tr>
                                                        <td>@track.Title</td>
                                                        <td>@track.Artist</td>
                                                        <td>@track.CreatedDate.ToString("MMM dd, yyyy")</td>
                                                        <td><span class="badge bg-warning">Unreleased</span></td>
                                                        <td>
                                                            <button class="btn btn-sm btn-info" @onclick="() => ViewTrack(track.Id)">View</button>
                                                            <button class="btn btn-sm btn-success" @onclick="() => ReleaseTrack(track.Id)">Release</button>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Archived Masters -->
                        <div class="tab-pane fade" id="archived" role="tabpanel">
                            <div class="vault-section">
                                <h4 class="section-title">Archived Masters</h4>
                                <p class="text-muted small mb-3">
                                    Original master files stored for archival purposes. These are immutable.
                                </p>

                                @if (archivedMasters.Count == 0)
                                {
                                    <div class="alert alert-info">
                                        No archived masters.
                                    </div>
                                }
                                else
                                {
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Title</th>
                                                    <th>Organization</th>
                                                    <th>Archived Date</th>
                                                    <th>File Size</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var master in archivedMasters)
                                                {
                                                    <tr>
                                                        <td>@master.Title</td>
                                                        <td>@master.Organization</td>
                                                        <td>@master.ArchivedDate.ToString("MMM dd, yyyy")</td>
                                                        <td>@master.FileSize</td>
                                                        <td>
                                                            <button class="btn btn-sm btn-info" @onclick="() => ViewMaster(master.Id)">View</button>
                                                            <button class="btn btn-sm btn-warning" @onclick="() => DownloadMaster(master.Id)">Download</button>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Sensitive Data -->
                        <div class="tab-pane fade" id="sensitive" role="tabpanel">
                            <div class="vault-section">
                                <div class="alert alert-warning">
                                    <strong>?? Warning:</strong> This section contains highly sensitive platform data. Access is logged.
                                </div>

                                <h4 class="section-title">Sensitive Configuration</h4>
                                <p class="text-muted small mb-3">
                                    Founder-only platform configuration and credentials. Handle with care.
                                </p>

                                <div class="sensitive-items">
                                    <div class="sensitive-item">
                                        <h6>API Keys & Secrets</h6>
                                        <button class="btn btn-sm btn-danger" @onclick="ViewApiKeys">
                                            View (Requires MFA)
                                        </button>
                                    </div>

                                    <div class="sensitive-item">
                                        <h6>Database Credentials</h6>
                                        <button class="btn btn-sm btn-danger" @onclick="ViewDbCredentials">
                                            View (Requires MFA)
                                        </button>
                                    </div>

                                    <div class="sensitive-item">
                                        <h6>Payment Gateway Tokens</h6>
                                        <button class="btn btn-sm btn-danger" @onclick="ViewPaymentTokens">
                                            View (Requires MFA)
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Soft Deleted -->
                        <div class="tab-pane fade" id="deleted" role="tabpanel">
                            <div class="vault-section">
                                <h4 class="section-title">Soft Deleted Items</h4>
                                <p class="text-muted small mb-3">
                                    Items marked as deleted but still recoverable. You can permanently delete or restore them.
                                </p>

                                @if (deletedItems.Count == 0)
                                {
                                    <div class="alert alert-info">
                                        No deleted items.
                                    </div>
                                }
                                else
                                {
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Item</th>
                                                    <th>Type</th>
                                                    <th>Deleted Date</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in deletedItems)
                                                {
                                                    <tr>
                                                        <td>@item.Name</td>
                                                        <td><span class="badge bg-secondary">@item.Type</span></td>
                                                        <td>@item.DeletedDate.ToString("MMM dd, yyyy")</td>
                                                        <td>
                                                            <button class="btn btn-sm btn-success" @onclick="() => RestoreItem(item.Id)">Restore</button>
                                                            <button class="btn btn-sm btn-danger" @onclick="() => PermanentlyDeleteItem(item.Id)">Delete Forever</button>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</FounderGate>

@code {
    private List<Track> unreleasedTracks = new();
    private List<Master> archivedMasters = new();
    private List<DeletedItem> deletedItems = new();

    private class Track
    {
        public string Id { get; set; } = "";
        public string Title { get; set; } = "";
        public string Artist { get; set; } = "";
        public DateTime CreatedDate { get; set; }
    }

    private class Master
    {
        public string Id { get; set; } = "";
        public string Title { get; set; } = "";
        public string Organization { get; set; } = "";
        public DateTime ArchivedDate { get; set; }
        public string FileSize { get; set; } = "";
    }

    private class DeletedItem
    {
        public string Id { get; set; } = "";
        public string Name { get; set; } = "";
        public string Type { get; set; } = "";
        public DateTime DeletedDate { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        // Load vault data from backend
        await LoadVaultData();
    }

    private async Task LoadVaultData()
    {
        // Placeholder data
        unreleasedTracks = new List<Track>
        {
            new Track { Id = "1", Title = "Summer Vibes", Artist = "The Artists", CreatedDate = DateTime.Now.AddMonths(-2) },
            new Track { Id = "2", Title = "Winter Dreams", Artist = "Cool Cats", CreatedDate = DateTime.Now.AddMonths(-1) }
        };

        archivedMasters = new List<Master>
        {
            new Master { Id = "1", Title = "Original Mix", Organization = "Cool Music", ArchivedDate = DateTime.Now.AddYears(-1), FileSize = "245 MB" },
            new Master { Id = "2", Title = "Remaster 2023", Organization = "Hot Tracks", ArchivedDate = DateTime.Now.AddMonths(-6), FileSize = "398 MB" }
        };

        deletedItems = new List<DeletedItem>
        {
            new DeletedItem { Id = "1", Name = "Test Release", Type = "Release", DeletedDate = DateTime.Now.AddDays(-7) }
        };
    }

    private void ViewTrack(string id) => Console.WriteLine($"Viewing track: {id}");
    private void ReleaseTrack(string id) => Console.WriteLine($"Releasing track: {id}");
    private void ViewMaster(string id) => Console.WriteLine($"Viewing master: {id}");
    private void DownloadMaster(string id) => Console.WriteLine($"Downloading master: {id}");
    private void ViewApiKeys() => Console.WriteLine("Viewing API keys");
    private void ViewDbCredentials() => Console.WriteLine("Viewing DB credentials");
    private void ViewPaymentTokens() => Console.WriteLine("Viewing payment tokens");
    private void RestoreItem(string id) => Console.WriteLine($"Restoring item: {id}");
    private void PermanentlyDeleteItem(string id) => Console.WriteLine($"Permanently deleting item: {id}");
}

<style>
    .vault-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: calc(100vh - 70px);
        padding-bottom: 40px;
    }

    .vault-header {
        background: white;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    }

    .vault-header h1 {
        color: #667eea;
        margin-bottom: 10px;
        font-weight: 700;
    }

    .vault-tabs {
        background: white;
        border: none;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .vault-tabs .nav-link {
        color: #666;
        border: none;
        border-bottom: 3px solid transparent;
        transition: all 0.3s;
    }

    .vault-tabs .nav-link.active {
        color: #667eea;
        border-bottom-color: #667eea;
        background: transparent;
    }

    .vault-section {
        background: white;
        padding: 24px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .section-title {
        color: #333;
        font-weight: 600;
        margin-bottom: 12px;
    }

    .sensitive-items {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .sensitive-item {
        background: #f8f9fa;
        padding: 16px;
        border-radius: 6px;
        border-left: 4px solid #dc3545;
    }

    .sensitive-item h6 {
        margin-bottom: 12px;
        color: #333;
        font-weight: 600;
    }

    .table {
        margin-bottom: 0;
    }
</style>
