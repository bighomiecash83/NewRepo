@namespace dmf_music_platform.Web.Components

<div class="dmf-card mb-6">
    <h2 class="text-xl font-bold">Streams Overview</h2>
    <p class="text-gray-300">Last 30 days</p>
    <div class="mt-4 rounded overflow-hidden">
        <img src="DMF_Resources_v1/dmf_charts/streams-chart-placeholder.svg" 
             alt="Streams Chart" 
             class="w-full h-auto" />
    </div>
</div>

<div class="dmf-card mb-6">
    <h2 class="text-xl font-bold">Earnings Overview</h2>
    <div class="mt-4 rounded overflow-hidden">
        <img src="DMF_Resources_v1/dmf_charts/revenue-chart-placeholder.svg" 
             alt="Revenue Chart" 
             class="w-full h-auto" />
    </div>
</div>

<div class="dmf-card mb-6">
    <h2 class="text-xl font-bold">Top Distribution Platforms</h2>
    <div class="mt-4 grid grid-cols-2 gap-4 md:grid-cols-3 lg:grid-cols-5">
        <div class="text-center">
            <img src="DMF_Resources_v1/dmf_dsp_badges/spotify-badge.svg" 
                 alt="Spotify" 
                 class="h-16 mx-auto mb-2" />
            <p class="text-sm">Spotify</p>
        </div>
        <div class="text-center">
            <img src="DMF_Resources_v1/dmf_dsp_badges/apple-music-badge.svg" 
                 alt="Apple Music" 
                 class="h-16 mx-auto mb-2" />
            <p class="text-sm">Apple Music</p>
        </div>
        <div class="text-center">
            <img src="DMF_Resources_v1/dmf_dsp_badges/youtube-music-badge.svg" 
                 alt="YouTube Music" 
                 class="h-16 mx-auto mb-2" />
            <p class="text-sm">YouTube</p>
        </div>
        <div class="text-center">
            <img src="DMF_Resources_v1/dmf_dsp_badges/tiktok-badge.svg" 
                 alt="TikTok" 
                 class="h-16 mx-auto mb-2" />
            <p class="text-sm">TikTok</p>
        </div>
        <div class="text-center">
            <img src="DMF_Resources_v1/dmf_dsp_badges/soundcloud-badge.svg" 
                 alt="SoundCloud" 
                 class="h-16 mx-auto mb-2" />
            <p class="text-sm">SoundCloud</p>
        </div>
    </div>
</div>
