@page "/"
@inject NavigationManager NavManager

@code {
    protected override void OnInitialized()
    {
        NavManager.NavigateTo("/splash", true);
    }
}

<h1 class="text-3xl font-bold mb-6">DMF Owner Dashboard</h1>

<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">

    <div class="p-6 bg-black/40 border border-gray-800 rounded-xl">
        <h2 class="text-xl font-semibold mb-2">Backend Status</h2>
        <p class="text-gray-300">Live</p>
    </div>

    <div class="p-6 bg-black/40 border border-gray-800 rounded-xl">
        <h2 class="text-xl font-semibold mb-2">Ryia Engine</h2>
        <p class="text-gray-300">Online</p>
    </div>

    <div class="p-6 bg-black/40 border border-gray-800 rounded-xl">
        <h2 class="text-xl font-semibold mb-2">Distributor System</h2>
        <p class="text-gray-300">Ready</p>
    </div>
</div>

<div class="mt-10">
    <h2 class="text-xl font-bold mb-4">Quick Actions</h2>

    <div class="flex flex-wrap gap-4">

        <a href="/pricing" class="px-4 py-3 bg-[#00A8FF] text-black rounded-lg font-bold hover:bg-[#0086cc]">
            View Artist Pricing
        </a>

        <a href="/ryia" class="px-4 py-3 bg-[#FFD700] text-black rounded-lg font-bold hover:bg-[#d4b000]">
            Open Ryia Builder
        </a>

        <a href="/distributor" class="px-4 py-3 bg-white text-black rounded-lg font-bold hover:bg-gray-300">
            Distributor Console
        </a>
    </div>
</div>
